@import 'nib'

global-reset()

.cf
  clearfix()

body, html
  margin: 0
  padding: 0
  height: 100%
  width: 100%
  min-height: 100%
  min-width: 100%

a
  text-decoration: none

  &:hover
    text-decoration: none

h1
  font-size: 3em
h2
  font-size: 2em
h3
  font-size: 1.5em

html
  font-family: sans-serif

.container
  padding-top: 1em

#page
  position: relative
  top: 0
