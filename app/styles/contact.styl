grassGreen = #A4E670

#page
  background-color: grassGreen
 
  .contact
    background: white
  
  h1  
    font-family: 'Bowlby One SC'
    text-align: center
    border-bottom: solid 4px black
    padding: 1em 0 0 .4em

  h2
    font-family: 'Bowlby One SC'
    text-align: center
    margin: 50px 0 0 0

  .container-box 
    width: 500px
    height: 650px
    border: solid 8px black 
    background-color: white
    margin: 0 auto
    margin-top: 50px
    margin-bottom: 200px
    border-radius: 2%

.contact-form
  margin: 0 auto
  width: 200px

  h3
    color: #333 
    font-size: 1em
    text-align: center
    float: left
    padding: 35px 0 20px 0

  textarea
    width: 300px
    height: 200px
    position: relative
    right: 60px

  input, textarea
    border: 5px solid white 
    -webkit-box-shadow: 
    inset 0 0 4px rgba(0,0,0,0.3),
    0 0 16px rgba(0,0,0,0.3) 
    -moz-box-shadow: 
    inset 0 0 4px rgba(0,0,0,0.3),
    0 0 8px rgba(0,0,0,0.3) 
    box-shadow: 
    inset 0 0 4px rgba(0,0,0,0.3),
    0 0 8px rgba(0,0,0,0.3) 
    padding: 10px
    background: rgba(255,255,255,0.5)

  .kitty
    position: relative
    left: 250px    
