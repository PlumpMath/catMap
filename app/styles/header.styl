.main-header
  position: absolute
  background: black
  top: 0
  left: 0
  width: 100%
  box-shadow: 0px 3px 5px rgba(100, 100, 100, 0.49);
  z-index: 500
  cursor: pointer
  padding: 1em 0

  .logo
    position: absolute
    left: 1em
    top: -0.2em
    font-size: 2em
    color: white
    font-family: 'Bowlby One SC'
    background: none
    line-height: 2em

  .main-nav
    float: right
    padding-right: 20px
    font-family: 'Bowlby One SC'
    font-weight: light

    .main-nav-li
      float: left
      margin-right: 0.5em
      cursor: pointer

      &:after
        content: ' | '
        color: white

      &:last-of-type
        &:after
          content: ''

      .main-nav-a
        color: white

        &.active
          text-decoration: underline

  
