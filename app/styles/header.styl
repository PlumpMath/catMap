.main-header
  position: absolute
  background: white
  top: -20px
  left: 0
  width: 100%
  box-shadow: 0px 3px 5px rgba(100, 100, 100, 0.49);
  z-index: 500
  transition-property: top
  transition-duration: 0.3s
  cursor: pointer

  &:hover
    top: 0px
    transition-property: top
    transition-duration: 0.3s

  .logo
    position: absolute
    right: 1em
    top: 1em
    font-size: 3em
    color: black
    font-family: 'Bowlby One SC'
    background: none
